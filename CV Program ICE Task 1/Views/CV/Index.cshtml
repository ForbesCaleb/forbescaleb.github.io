@model CV_Program_ICE_Task_1.Models.Profile

<div class="cv-container">

    <!-- HEADER -->
    <div class="cv-header">
        <h1>@Model.FullName</h1>

        <div class="contact-row">
            <span>@Model.Location</span> |
            <span>@Model.Phone</span> |
            <a href="mailto:@Model.Email">@Model.Email</a> |
            <a href="@Model.GitHubUser" target="_blank">GitHub</a>
        </div>
    </div>

    <!-- ABOUT -->
    <section class="cv-section">
        <h2>About Me</h2>
        <p>@Model.AboutMe</p>
    </section>

    <!-- SKILLS -->
    <section class="cv-section">
        <h2>Skills</h2>

        <div class="skills-container">

            <div class="skills-box">
                <h4>Technical Skills</h4>
                <ul>
                    @foreach (var skill in Model.TechnicalSkills)
                    {
                        <li>@skill</li>
                    }
                </ul>
            </div>

            <div class="skills-box">
                <h4>Soft Skills</h4>
                <ul>
                    @foreach (var skill in Model.SoftSkills)
                    {
                        <li>@skill</li>
                    }
                </ul>
            </div>

        </div>
    </section>

    <!-- EDUCATION -->
    <section class="cv-section">
        <h2>Education</h2>

        <p><strong>@Model.Qualification</strong></p>

        <p>@Model.Institution</p>

        <p>@Model.YearInfo</p>

        <p>
            <strong>Relevant Coursework:</strong>
            @string.Join(", ", Model.RelevantCoursework)
        </p>
    </section>

    <!-- PROJECTS -->
    <section class="cv-section">

        <h2>Projects</h2>

        @foreach (var p in Model.Projects)
        {
            <div class="project-card">

                <h4>@p.Name</h4>

                <p>@p.Description</p>

                <p class="tech">
                    <strong>Tech:</strong> @p.TechStack
                </p>

                <a class="btn btn-primary"
                   asp-action="Details"
                   asp-route-id="@p.Id">
                    View Project
                </a>

            </div>
        }

    </section>

    <!-- WORK -->
    <section class="cv-section">

        <h2>Work Experience</h2>

        <p>
            <strong>@Model.WorkPlace</strong> - @Model.WorkTitle
        </p>

        <ul>
            @foreach (var w in Model.WorkBullets)
            {
                <li>@w</li>
            }
        </ul>

    </section>

    <!-- CERTIFICATIONS -->
    <section class="cv-section">

        <h2>Certifications</h2>

        <ul>
            @foreach (var c in Model.Certifications)
            {
                <li>@c</li>
            }
        </ul>

    </section>

    <!-- CONTACT -->
    <section class="cv-section">

        <h2>Contact Info</h2>

        <p style="white-space: pre-line;">
            @Model.ContactInfo
        </p>

    </section>

</div>