@model CV_Program_ICE_Task_1.Models.Project

<h2>Project Details</h2>

<div class="card p-3">
    <p class="mb-1"><strong>Name:</strong> @Model.Name</p>

    @if (!string.IsNullOrWhiteSpace(Model.Subtitle))
    {
        <p class="mb-2 text-muted">@Model.Subtitle</p>
    }

    <p><strong>Description:</strong> @Model.Description</p>

    @if (!string.IsNullOrWhiteSpace(Model.TechStack))
    {
        <p><strong>Tech Stack:</strong> @Model.TechStack</p>
    }

    @if (Model.Bullets != null && Model.Bullets.Count > 0)
    {
        <hr />
        <h5>Highlights</h5>
        <ul>
            @foreach (var b in Model.Bullets)
            {
                <li>@b</li>
            }
        </ul>
    }

    <div class="mt-3">
        @if (!string.IsNullOrWhiteSpace(Model.GitHubUrl))
        {
            <a class="btn btn-success" href="@Model.GitHubUrl" target="_blank">
                View on GitHub
            </a>
        }

        <a class="btn btn-secondary" asp-action="Index">
            Back
        </a>
    </div>
</div>